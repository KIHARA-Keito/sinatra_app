<header class="header">
  <h2 class="title-page"><%= @title %></h2>
</header>
<main class="main">
  <form method="post" action="/memo/<%= @memo["id"] %>">
    <div class="input-area">
      <input type="text" name="title" value="<%= escape_text(@memo["title"]) %>">
      <textarea type="text" name="body"><%= escape_text(@memo["body"]) %></textarea>
      <input type="hidden" name="_method" value="PATCH">
    </div>
    <div class="bottun-area">
      <input type="submit" value="保存" class="bottun">
    </div>
  </form>
</main>
<footer class="footer">
  <p class="link-top"><a href="/">＜ メモ一覧へ戻る</a></p>
</footer>
